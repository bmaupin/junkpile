<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
           parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionOverflowButtonStyle</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionOverflowButtonStyle">@style/ActionOverflowButtonStyle</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/custom_blue</item>

        <!-- Support library compatibility -->
        <item name="background">@color/custom_blue</item>
    </style>
    
    <style name="ActionOverflowButtonStyle"
           parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <!-- Override the default overflow button with a light one -->
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>
</resources>
