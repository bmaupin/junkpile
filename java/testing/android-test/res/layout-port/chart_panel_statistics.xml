<com.googlecode.chartdroid.pie.ChartLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chart_panel_statictics"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20px"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >
        <include layout="@layout/chart_title" />
        <include layout="@layout/chart_chart" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >
	    <include layout="@layout/chart_key" />
	    <include layout="@layout/chart_message"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="bottom|center_horizontal"
	        />
    </LinearLayout>
</com.googlecode.chartdroid.pie.ChartLinearLayout>
