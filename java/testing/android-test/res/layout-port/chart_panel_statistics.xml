<com.googlecode.chartdroid.pie.ChartRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chart_panel_statictics"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20px"
    >
    <include layout="@layout/chart_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        />
    <include layout="@layout/chart_key"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/chart_message"
        />
    <include layout="@layout/chart_chart"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_above="@android:id/list"
    />
</com.googlecode.chartdroid.pie.ChartRelativeLayout>